# Backend Configuration
BACKEND_PORT=8000

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Neo4j Configuration (copy to .env, which should stay gitignored, and replace before running Docker Compose)
# Use a strong password (e.g., 12+ chars, mix upper/lowercase, numbers, and symbols). Avoid "/" in the password to keep the auth string parsable.
NEO4J_AUTH=neo4j/INSECURE_PLACEHOLDER
# Leave empty unless you explicitly need to allow procedures (e.g., set to gds.* for local graph experiments).
NEO4J_UNRESTRICTED_PROCS=
